@model IEnumerable<CustomerBalance>
@{
    ViewData["Title"] = "Customer Balance List";

    var data = ViewBag.CustBaL ;

    int row = 0;

}

<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 2px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #f01523;
        }

        #customers th {
            padding-top: 8px;
            padding-bottom: 8px;
            text-align: left;
            background-color: #4267B2;
            color: white;
        }

    table {
        width: 50%;
        border-collapse: collapse;
        background-color: white;
    }

    th {
        height: 10px;
    }

    #customers td {
        font-size: 11px;
        vertical-align: middle;
        height: 10px;
        padding: 2.5px;
        text-align: center;
    }

    #customers th {
        font-size: 10px;
        padding: 5px;
        text-align: center;
    }
</style>

<link rel="stylesheet " href="~/css/gridmvc.css" />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Customer Current Balance</h3>
                        
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0 mt-3" >
                       

                        <hr />
                        @if (data != null)
                        {
                            <table id="customers" class="table table-bordered table-striped datatable">
                                <thead>
                                    <tr>
                                        <th>Row</th>
                                        <th>Customer ID </th>
                                        <th>Customer Name </th>
                                        <th>Cust Address </th>
                                        <th>Current Balance</th>
                                        <th>Curr </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in data)
                                    {
                                        row = row + 1;
                                        <tr>
                                            <td>@row</td>
                                            <td>@item.Kunnr</td>
                                            <td>@item.Name1</td>
                                            <td>@item.CustAddress</td>
                                            <td>@item.t_curr_bal</td>
                                            <td>@item.loc_currcy</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>

                </div>

            </div>
        </div>

    </div>

</section>

